{
  "name": "Shortkeys",
  "manifest_version": 1,
  "description": "Easily customizable keyboard shortcuts for Chrome",
  "version": "1.3.4",
  "permissions": [
    "history",
    "tabs",
    "storage"
  ],
  "options_page": "pages/options.html",
  "background_page": "pages/background.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/keymaster.js", "js/shortkeys.js"],
      "all_frames": true
    }
  ],
  "icons": {
    "16"  : "img/icon_16.png",
    "48"  : "img/icon_48.png",
    "128" : "img/icon_128.png"
  },
  "content_security_policy": "default-src  'self' 'unsafe-inline' 'unsafe-eval';"
}
