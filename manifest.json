{
  "name": "Shortkeys",
  "manifest_version": 2,
  "description": "Easily customizable keyboard shortcuts for Chrome",
  "version": "1.0",
  "permissions": [
    "history",
    "tabs",
    "storage"
  ],
  "options_page": "pages/options.html",
  "background": {
    "page": "pages/background.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/keymaster.js", "js/shortkeys.js"]
    }
  ],
  "icons": {
    "16"  : "img/icon_16.png",
    "48"  : "img/icon_48.png",
    "128" : "img/icon_128.png"
  }
}
